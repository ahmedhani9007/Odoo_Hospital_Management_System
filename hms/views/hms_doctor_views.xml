<odoo>
    <data>
        <!-- Tree View for Doctors -->
        <record id="hms_doctor_tree_view" model="ir.ui.view">
            <field name="name">Doctors Tree View</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Doctors -->
        <record id="hms_doctor_form_view" model="ir.ui.view">
            <field name="name">Doctors Form View</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="image"/>
                            <field name="patient_ids"/> <!-- Corrected field name -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to Open Doctors -->
        <record id="hms_doctor_action" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="res_model">hms.doctor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu for Doctors -->
        <menuitem id="hms_root" name="HMS"/>
        <menuitem id="hms_doctor_menu" name="Doctors" parent="hms_root" action="hms_doctor_action"/>
    </data>
</odoo>
